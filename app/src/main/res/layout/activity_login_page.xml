<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <ImageView
        android:id="@+id/logimg1"
        android:layout_width="410dp"
        android:layout_height="957dp"
        android:contentDescription="@string/wel2back1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wel11"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/logimg2"
        android:layout_width="378dp"
        android:layout_height="497dp"
        android:layout_marginTop="10dp"
        android:alpha="0.89"
        android:contentDescription="@string/wel2back1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restImage1"
        app:srcCompat="@drawable/white"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/loginbtn001"
        android:layout_width="286dp"
        android:layout_height="69dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/abeezee"
        android:text="@string/wbtn1"
        android:textColor="#FBF9F9"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="#61B303"
        app:cornerRadius="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logedit2"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/restImage1"
        android:layout_width="180dp"
        android:layout_height="139dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/wel2back1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo3"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/logtext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/abeezee"
        android:text="@string/logtext1"
        android:textColor="#595656"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/logimg2"
        app:layout_constraintStart_toStartOf="@+id/logimg2"
        app:layout_constraintTop_toTopOf="@+id/logimg2" />

    <EditText
        android:id="@+id/logedit1"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/logedit1"
        android:inputType="textEmailAddress"
        android:textColorHint="#736F6F"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/logimg2"
        app:layout_constraintStart_toStartOf="@+id/logimg2"
        app:layout_constraintTop_toBottomOf="@+id/logtext1"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/logedit2"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/logedit2"
        android:inputType="textPassword"
        android:textColorHint="#736F6F"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/logimg2"
        app:layout_constraintStart_toStartOf="@+id/logimg2"
        app:layout_constraintTop_toBottomOf="@+id/logedit1" />

</androidx.constraintlayout.widget.ConstraintLayout>