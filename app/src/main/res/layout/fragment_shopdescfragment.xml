<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shopdescfragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shopimageholder"
            android:layout_width="240dp"
            android:layout_height="173dp"
            android:layout_marginTop="40dp"
            android:src="@color/common_google_signin_btn_text_dark_disabled"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:background="#BFD5B5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopnameholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/shopnameholder"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shopaddressholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/shopaddressholder"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/shopemailholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/shopemailholder"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/shopcontactholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/shopcontactholder"
                android:textColor="#000"
                android:textSize="25sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/shoplocation"
                    android:layout_width="61dp"
                    android:layout_height="49dp"
                    android:src="@drawable/ic_baseline_location_on_24" />

                <TextView
                    android:id="@+id/shoplocationholder"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/shoplocation"
                    android:paddingTop="5dp"
                    android:text="@string/shoplocationholder"
                    android:textColor="#000"
                    android:textSize="25sp"
                    tools:layout_editor_absoluteX="83dp"
                    tools:layout_editor_absoluteY="2dp" />
            </LinearLayout>


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="-35dp"
                tools:layout_editor_absoluteY="61dp" />


            <LinearLayout
                android:layout_width="367dp"
                android:layout_height="149dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aboutshop"
                    android:layout_width="316dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/aboutshop"
                    android:textColor="#000"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/shopdescholder"
                    android:layout_width="316dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/shopdescholder"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</FrameLayout>